{
  "name": "Flutter Pocketbase Template Dev Container",
  "build": {
    "dockerfile": "../Containerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "flutter --version || true"
}
